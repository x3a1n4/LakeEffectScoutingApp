<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/drivetrainPageLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:rowCount="14"
            app:columnCount="3"
            app:orientation="vertical"
            android:layout_margin="10dp">

            <!--Lower Rocket-->
            <TextView
                android:text="Lower rocket:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:textStyle="bold"
                app:layout_gravity="center_horizontal"
                app:layout_row="0"
                app:layout_column="0"
                app:layout_columnSpan="3"
                android:paddingVertical="10dp"/>

            <TextView
                android:text="50%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:id="@+id/lowerRocketPercentage"
                app:layout_gravity="center_horizontal"
                app:layout_row="1"
                app:layout_column="0"
                app:layout_columnSpan="3"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_row="2"
                app:layout_column="0"
                app:layout_columnSpan="3"
                android:progress="50"
                android:min="0"
                android:max="100"
                android:id="@+id/lowerRocket"
                app:layout_gravity="center_vertical"
                />

            <!--Middle Rocket-->
            <TextView
                android:text="Middle rocket:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:textStyle="bold"
                app:layout_gravity="center_horizontal"
                app:layout_row="3"
                app:layout_column="0"
                app:layout_columnSpan="3"
                android:paddingVertical="10dp"/>

            <TextView
                android:text="50%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:id="@+id/middleRocketPercentage"
                app:layout_gravity="center_horizontal"
                app:layout_row="4"
                app:layout_column="0"
                app:layout_columnSpan="3"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_row="5"
                app:layout_column="0"
                app:layout_columnSpan="3"
                android:progress="50"
                android:min="0"
                android:max="100"
                android:id="@+id/middleRocket"
                app:layout_gravity="center_vertical"
                />

            <!--High Rocket-->
            <TextView
                android:text="High rocket:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:textStyle="bold"
                app:layout_gravity="center_horizontal"
                app:layout_row="6"
                app:layout_column="0"
                app:layout_columnSpan="3"
                android:paddingVertical="10dp"/>

            <TextView
                android:text="50%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:id="@+id/highRocketPercentage"
                app:layout_gravity="center_horizontal"
                app:layout_row="7"
                app:layout_column="0"
                app:layout_columnSpan="3"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_row="8"
                app:layout_column="0"
                app:layout_columnSpan="3"
                android:progress="50"
                android:min="0"
                android:max="100"
                android:id="@+id/highRocket"
                app:layout_gravity="center_vertical"
                />

            <TextView
                android:text="Cargo ship:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:textStyle="bold"
                app:layout_gravity="center_horizontal"
                app:layout_row="9"
                app:layout_column="0"
                app:layout_columnSpan="3"
                android:paddingVertical="10dp"/>

            <TextView
                android:text="50%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:id="@+id/cargoShipPercentage"
                app:layout_gravity="center_horizontal"
                app:layout_row="10"
                app:layout_column="0"
                app:layout_columnSpan="3"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_row="11"
                app:layout_column="0"
                app:layout_columnSpan="3"
                android:progress="50"
                android:min="0"
                android:max="100"
                android:id="@+id/cargoShip"
                app:layout_gravity="center_vertical"
                />

            <TextView
                android:text="Reaches over bumber:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                app:layout_row="12"
                app:layout_column="0"
                app:layout_columnWeight="1"
                android:paddingVertical="10dp"/>

            <RadioButton
                android:text="Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:id="@+id/reachesOverBumberYes"
                app:layout_row="12"
                app:layout_column="1"
                app:layout_columnWeight="1"/>

            <RadioButton
                android:text="No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:id="@+id/reachesOverBumberNo"
                app:layout_row="12"
                app:layout_column="2"
                app:layout_columnWeight="1"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_row="13"
                app:layout_column="0"
                app:layout_columnSpan="3"
                android:hint="Describe their mechanism"
                android:id="@+id/mechanismDescription"
                android:textSize="@dimen/text_small"
                android:layout_marginBottom="50dp"/>



        </android.support.v7.widget.GridLayout>
    </ScrollView>
</android.support.percent.PercentRelativeLayout>